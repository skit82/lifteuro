mixin pagination()
  section.pagination
    .pagination__wrapper
      .pagination__load.load
        button.load__btn(type="type")
          +icon("icon-plus", 15, 15)
          span Загрузить больше
      .pagination__box
        .pagination__list
          li.pagination__item
            a.pagination__link.pagination__link--active(href="#") 1
          li.pagination__item
            a.pagination__link(href="#") 2
          li.pagination__item
            a.pagination__link(href="#") 3
          li.pagination__item
            a.pagination__link(href="#") 4
          li.pagination__item
            a.pagination__link(href="#") 5
          li.pagination__item
            a.pagination__link.ellipsis(href="#") ...
          li.pagination__item
            a.pagination__link(href="#") 11
